<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="230dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:weightSum="1"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <NumberPicker
        android:id="@+id/mNumberPickerQty"
        android:layout_marginRight="20dp"
        android:layout_marginLeft ="20dp"
        android:layout_width="match_parent"
        android:divider="@color/colorWhite"
        android:background="@null"
        android:layout_height="0dp"
        android:layout_weight=".6">
    </NumberPicker>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/mSpinnerMultiplier"
        android:layout_width="100dp"
        android:layout_gravity="center"
        android:entries="@array/qtyMultiplier"
        android:layout_height="0dp"
        android:layout_marginTop="05dp"
        android:layout_weight=".2">
    </android.support.v7.widget.AppCompatSpinner>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/mButtonSave"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_weight=".15"
        android:textSize="20sp"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:background="@drawable/selector_blue_button"
        android:textColor="@drawable/selector_blue_button_text"
        android:text="SET"
        />
</LinearLayout>