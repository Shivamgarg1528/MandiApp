<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/layout_dialog_qty_change_bg"
    android:orientation="vertical">

    <NumberPicker
        android:id="@+id/layout_dialog_qty_change_number_picker"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@null"
        android:divider="@color/colorWhite" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/layout_dialog_qty_change_btn_set"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_blue_button"
        android:text="@string/string_set"
        android:textColor="@drawable/selector_blue_button_text"
        android:textSize="20sp" />
</LinearLayout>