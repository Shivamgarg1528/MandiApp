<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    card_view:cardBackgroundColor="@color/colorWhite"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/rowOrderOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="17"
            android:maxLines="1"
            android:padding="01dp"
            android:text="12"
            android:textSize="27sp"
            android:textColor="@color/rowParentColor" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/rowOrderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="05dp"
            android:text="2016-18-22"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/rowChildColor" />

        <TableLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rowOrderOrderId"
            android:paddingTop="05dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:padding="01dp"
                    android:text="Sub Total"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/rowParentColor" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/rowOrderSubTotal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center|right"
                    android:maxLines="1"
                    android:padding="01dp"
                    android:text="00.00"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/rowChildColor" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:padding="01dp"
                    android:text="Expenses"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/rowParentColor" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/rowOrderExpenses"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center|right"
                    android:maxLines="1"
                    android:padding="01dp"
                    android:text="00.00"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/rowChildColor" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:padding="01dp"
                    android:text="Labour Cost"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/rowParentColor" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/rowOrderLabourValue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center|right"
                    android:maxLines="1"
                    android:padding="01dp"
                    android:text="00.00"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/rowChildColor" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:padding="01dp"
                    android:text="Bardana Cost"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/rowParentColor" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/rowOrderBardanaValue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center|right"
                    android:maxLines="1"
                    android:padding="01dp"
                    android:text="00.00"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/rowChildColor" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:padding="01dp"
                    android:text="Total"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/rowParentColor" />
                <LinearLayout android:layout_weight=".5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="80dp"
                        android:background="@color/colorPrimary"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/rowOrderTotalValue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:maxLines="1"
                    android:padding="01dp"
                    android:text="00.00"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorPrimary" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:padding="01dp"
                    android:text="Vehicle Cost"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/rowParentColor" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/rowOrderVehicleRent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center|right"
                    android:maxLines="1"
                    android:padding="01dp"
                    android:text="00.00"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/holo_red_dark" />

            </TableRow>

        </TableLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/rowOrderDriverNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="01dp"
            android:layout_alignParentBottom="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_green_dark" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/rowOrderTotalNagAndQuintal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="01dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_orange_dark" />
    </RelativeLayout>

</android.support.v7.widget.CardView>