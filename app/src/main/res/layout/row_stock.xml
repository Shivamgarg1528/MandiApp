<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardViewStyle">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="4dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/row_stock_tv_person_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/rowParentColor"
            android:textSize="20sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/row_stock_tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/rowChildColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:padding="1dp"
                    android:text="@string/string_name"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/rowParentColor" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:padding="1dp"
                    android:text="@string/string_qty"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/rowParentColor" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:padding="1dp"
                    android:text="@string/string_price"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/rowParentColor" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/row_stock_tv_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|end"
                    android:maxLines="1"
                    android:padding="1dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/rowChildColor" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/row_stock_tv_qty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|end"
                    android:maxLines="1"
                    android:padding="1dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/rowChildColor" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/row_stock_tv_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|end"
                    android:maxLines="1"
                    android:padding="1dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/rowChildColor" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
