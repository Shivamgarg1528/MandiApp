<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ig.com.digitalmandi">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.SignUpActivity" />
        <activity android:name=".activity.SyncActivity" />
        <activity android:name=".activity.seller.SupplierHomeActivity" />
        <activity android:name=".activity.seller.SupplierCustomerAddActivity" />
        <activity android:name=".activity.seller.SupplierProductModifyActivity" />
        <activity android:name=".activity.seller.SellerUnitModifyActivity" />
        <activity android:name=".activity.seller.SupplierPurchaseActivity" />
        <activity android:name=".activity.seller.AddItemInOrderActivity" />
        <activity android:name=".activity.seller.OrderDetailsActivity" />
        <activity android:name=".activity.seller.PaymentsActivity" />
        <activity android:name=".activity.seller.CustomerOrdersActivity" />
        <activity android:name=".activity.customer.CustomerActivity" />

    </application>
</manifest>