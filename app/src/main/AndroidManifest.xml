<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ig.com.digitalmandi">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:name=".ApplicationClass"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:overrideLibrary="gun0912.tedbottompicker"
        tools:replace="android:icon">

        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.LoginActivity" />
        <activity
            android:name=".activity.SignUpActivity"
            android:theme="@style/AppTheme.Dark"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activity.SyncActivity" />
        <activity android:name=".activity.seller.SupplierHomeActivity" />
        <activity android:name=".activity.seller.SellerOrdersActivity" />
        <activity
            android:name=".activity.seller.SupplierCustomerAddActivity"
            android:windowSoftInputMode="adjustPan" />

        <activity android:name=".activity.seller.SupplierProductModifyActivity" />
        <activity android:name=".activity.seller.SellerUnitModifyActivity" />
        <activity android:name=".activity.seller.SupplierPurchaseActivity" />
        <activity android:name=".activity.seller.SupplierPurchasePaymentActivity" />
        <activity android:name=".activity.seller.AddItemInOrderActivity" />
        <activity android:name=".activity.seller.CustomerOrderDetailsActivity" />
        <activity android:name=".activity.seller.CustomerOrderPaymentsActivity" />
        <activity android:name=".activity.seller.SupplierPurchaseSoldActivity" />
        <activity android:name=".activity.seller.CustomerOrdersActivity" />

        <activity android:name=".activity.customer.CustomerActivity" />

        <provider
            android:name=".database.AppContentProvider"
            android:authorities="com.satguru.appcontentprovider"
            android:enabled="true" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="51b905127fed8a1a6812a0df86f054be4cb938dd" />

    </application>
</manifest>